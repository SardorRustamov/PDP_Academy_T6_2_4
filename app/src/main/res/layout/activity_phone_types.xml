<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PhoneTypesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#E5F96F">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone types"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_samsung"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="Samsung"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            android:onClick="onClick"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_iphone"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="iPhone"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            android:onClick="onClick"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_redmi"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="Redmi"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            android:onClick="onClick"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_sony"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="Sony"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            android:onClick="onClick"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_huawei"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="Huawei"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            android:onClick="onClick"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/id_artel"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingStart="23dp"
            android:text="Artel"
            android:clickable="true"
            android:onClick="onClick"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="65dp"
            android:focusable="true"
            tools:ignore="RtlHardcoded,RtlSymmetry,UsingOnClickInXml" />

    </androidx.cardview.widget.CardView>

</LinearLayout>